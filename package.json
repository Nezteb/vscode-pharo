{
	"name": "pharo-language-server",
	"displayName": "Pharo Language Support",
	"description": "Highlighting, Auto-completion, Execution, ...",
	"author": "Beno√Æt Verhaeghe",
	"license": "MIT",
	"version": "0.0.11",
	"preview": true,
	"icon": "icon.png",
	"enableProposedApi": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/badetitou/vscode-pharo"
	},
	"publisher": "badetitou",
	"categories": [
		"Formatters",
		"Programming Languages",
		"Snippets",
		"Debuggers"
	],
	"keywords": [
		"pharo smalltalk"
	],
	"engines": {
		"vscode": "^1.49.0"
	},
	"activationEvents": [
		"onDebugResolve:pharodb",
		"onLanguage:pharo",
		"onCommand:pharo.extensionVersion",
		"onCommand:pharo.printIt",
		"onCommand:pharo.showIt",
		"onCommand:extension.pharo-debug.debugEditorContents",
		"onNotebook:moosebook"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Pharo",
			"properties": {
				"pharo.pathToVM": {
					"scope": "window",
					"type": "string",
					"default": "pharo",
					"description": "The Pharo VM that will be used to run the Pharo Image holding the Pharo Language server. You should select a VM that can run the selected image"
				},
				"pharo.pathToImage": {
					"scope": "window",
					"type": "string",
					"default": "",
					"description": "The Pharo Image that can run the Pharo Language server (https://github.com/badetitou/Pharo-LanguageServer)."
				}
			}
		},
		"languages": [
			{
				"id": "pharo",
				"aliases": [
					"Pharo",
					"smalltalk",
					"SmallTalk",
					"smalltalk"
				],
				"extensions": [
					".st"
				],
				"configuration": "./language-configuration.json"
			},
			{
				"id": "moosebook",
				"aliases": [
					"Moose Notebook"
				]
			}
		],
		"grammars": [
			{
				"language": "pharo",
				"scopeName": "source.pharo",
				"path": "./syntaxes/pharo.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "pharo.extensionVersion",
				"title": "Show Pharo Language Server Version"
			},
			{
				"command": "pharo.save",
				"title": "Save the Pharo image"
			},
			{
				"command": "pharo.printIt",
				"title": "Print the result of selected lines"
			},
			{
				"command": "pharo.showIt",
				"title": "Show the result of selected lines"
			},
			{
				"command": "extension.pharo-debug.debugEditorContents",
				"title": "Debug File",
				"category": "Pharo Debug",
				"when": "resourceLangId == markdown",
				"icon": "$(debug-alt)"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "pharo.showIt",
					"when": "editorLangId == pharo",
					"group": "Pharo@1"
				},
				{
					"command": "pharo.printIt",
					"when": "editorLangId == pharo",
					"group": "Pharo@1"
				}
			],
			"editor/title": [
				{
					"command": "extension.pharo-debug.debugEditorContents",
					"when": "resourceLangId == pharo",
					"group": "Pharo@2"
				}
			]
		},
		"keybindings": [
			{
				"command": "pharo.showIt",
				"key": "ctrl+alt+i"
			},
			{
				"command": "pharo.printIt",
				"key": "ctrl+alt+p"
			}
		],
		"debuggers": [
			{
				"type": "pharodb",
				"label": "Pharo Debug",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a text file.",
								"default": "${workspaceFolder}/${command:AskForProgramName}"
							}
						}
					}
				}
			}
		],
		"commandPalette": [
			{
				"command": "extension.pharo-debug.debugEditorContents",
				"when": "resourceLangId == pharo"
			}
		],
		"snippets": [
			{
				"language": "pharo",
				"path": "./snippets/snippets.json"
			}
		],
		"notebookProvider": [
			{
				"viewType": "moosebook",
				"displayName": "Moose Notebook",
				"selector": [
					{
						"filenamePattern": "*.moosebook"
					}
				]
			}
		]
	},
	"scripts": {
		"compile": "tsc -b",
		"test": "sh ./scripts/e2e.sh",
		"vscode:prepublish": "npm run bundle-all",
		"test-compile": "tsc -p ./",
		"get-proposed": "npx vscode-dts dev",
		"get-main": "npx vscode-dts main",
		"bundle-all": "node esbuild.js",
		"bundle-watch": "node esbuild.js --watch"
	},
	"dependencies": {
		"vscode-debugadapter": "^1.43.0",
		"vscode-dts": "^0.3.1",
		"vscode-languageclient": "^6.1.3",
		"vscode-languageserver-protocol": "3.15.3"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"esbuild": "^0.8.34",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"husky": "^4.2.3",
		"mocha": "^8.1.1",
		"preact": "^10.4.6",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
