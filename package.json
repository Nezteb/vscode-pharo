{
	"name": "pharo-language-server",
	"description": "Pharo language server",
	"author": "Beno√Æt Verhaeghe",
	"license": "MIT",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/badetitou/vscode-pharo"
	},
	"publisher": "badetitou",
	"categories": ["Formatters", "Programming Languages", "Snippets"],
	"keywords": [
		"pharo smalltalk"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:pharo",
		"onCommand:pharo.extensionVersion",
		"onCommand:pharo.printIt",
		"onCommand:pharo.showIt"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Pharo",
			"properties": {
				"pharo.pathToVM": {
					"scope": "window",
					"type": "string",
					"default": "pharo",
					"description": "The Pharo VM that will be used to run the Pharo Image holding the Pharo Language server. You should select a VM that can run the selected image"
				},
				"pharo.pathToImage": {
					"scope": "window",
					"type": "string",
					"default": "/home/badetitou/Pharo/images/LSP2/LSP2.image",
					"description": "The Pharo Image that can run the Pharo Language server (https://github.com/badetitou/Pharo-LanguageServer)."
				}
			}
		},
		"languages": [
			{
				"id": "pharo",
				"aliases": [
					"Pharo",
					"smalltalk",
					"SmallTalk",
					"smalltalk"
				],
				"extensions": [
					".st"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "pharo",
				"scopeName": "source.pharo",
				"path": "./syntaxes/pharo.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "pharo.extensionVersion",
				"title": "Show Pharo Language Server Version"
			},
			{
				"command": "pharo.save",
				"title": "Save the Pharo image"
			},
			{
				"command": "pharo.printIt",
				"title": "Print the result of selected lines"
			},
			{
				"command": "pharo.showIt",
				"title": "Show the result of selected lines"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "pharo.showIt",
					"when": "editorLangId == pharo",
					"group": "Pharo@1"
				},
				{
					"command": "pharo.printIt",
					"when": "editorLangId == pharo",
					"group": "Pharo@1"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^8.0.3",
		"mocha": "^8.1.1",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^4.0.2"
	}
}
